
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model GetBlog.Models.Category

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit: @Model.Name</h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CategoryId)

        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Name, "نام طبقه بندی")
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "نام طبقه بندی را وارد کنید" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Slug)
                @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @class = "form-control", placeholder = "e.g., technology" } })
                @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ParentCategoryId, "طبقه بندی والد")
                @Html.DropDownListFor(model => model.ParentCategoryId,
                      (SelectList)ViewBag.ParentCategoryId,
                      "-- No Parent --",
                      new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ParentCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
            @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

